@startuml

class Component {
  + Component()
  + virtual ~Component()
  + virtual void configuration()
  + virtual void connection()
  + virtual void start()
  + virtual void step()
  + virtual void stop()
  + virtual void status()
}

{% for component in MAIN.COMPONENTS.values() %}
Class {{component.NAME}} {
{% for d in component.DATA -%}
   {{d.TYPE.NAME}} {{d.NAME}}
{% endfor -%}
{% for f in component.FUNCTION -%}
   {{f.RETURN.NAME}} {{f.NAME}}(
   {%- for p in f.SIGNATURE -%}
   {{p.TYPE.NAME}} {{p.NAME}}{%if not loop.last%},{%endif%}
   {%- endfor -%})
{% endfor -%}
{% for p in component.PROVIDE -%}
{%if loop.first %}__ Provide __
{%endif-%}
   {{p.INTERFACE.NAME}} {{p.NAME}}
{% endfor -%}
{% for r in component.REQUIRE -%}
{%if loop.first %}__ Require __
{%endif-%}
   {{r.INTERFACE.NAME}} {{r.NAME}}
{% endfor -%}
{% for sc in component.SUB_COMPONENT -%}
{%if loop.first %}__ SUB COMPONENT __
{%endif-%}
   {{sc.COMPONENT.NAME}} {{sc.NAME}}
{% endfor -%}
}

{% if "PARENT" in component %}
{{component.PARENT.NAME}} <|-- {{component.NAME}}
{% else %}
Component <|-- {{component.NAME}}
{% endif %}
{%endfor%}
@enduml
